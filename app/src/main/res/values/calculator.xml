    <style name="button_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="button_style">
        <item name="android:textSize">40.0dip</item>
        <item name="android:background">@drawable/func_btn_selector</item>
        <item name="android:paddingTop">0.0dip</item>
        <item name="android:paddingBottom">1.0dip</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:paddingStart">2.25dip</item>
        <item name="android:paddingEnd">2.25dip</item>
    </style>
    <style name="basic_button_style">
        <item name="android:textSize">40.0dip</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingTop">@dimen/button_paddingTop</item>
        <item name="android:paddingBottom">@dimen/button_paddingBottom</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/func_btn_selector</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:paddingStart">@dimen/button_paddingLeft</item>
        <item name="android:paddingEnd">@dimen/button_paddingRight</item>
    </style>
    <style name="operator_button_style" parent="@style/button_style">
        <item name="android:background">@drawable/func_btn_selector</item>
    </style>
    <style name="basic_operator_button_style" parent="@style/basic_button_style">
        <item name="android:background">@drawable/basic_operator_btn_selector</item>
    </style>
    <style name="digit_button_style" parent="@style/button_style">
        <item name="android:background">@drawable/digit_btn_selector</item>
    </style>
    <style name="basic_digit_button_style" parent="@style/basic_button_style">
