    <style name="basic_del_button_style" parent="@style/basic_button_style">
        <item name="android:background">@drawable/basic_del_btn_selector</item>
    </style>
    <style name="basic_all_clear_button_style" parent="@style/basic_button_style">
        <item name="android:background">@drawable/basic_all_clear_btn_selector</item>
    </style>
    <style name="equal_button_style" parent="@style/button_style">
        <item name="android:background">@drawable/equal_btn_selector</item>
    </style>
    <style name="basic_equal_button_style" parent="@style/basic_button_style">
        <item name="android:background">@drawable/basic_equal_btn_selector</item>
    </style>
    <style name="button_small_style" parent="@style/button_style">
        <item name="android:textSize">30.0dip</item>
    </style>

    <style name="basic_screen_style">
        <item name="android:paddingTop">@dimen/basic_screen_style_paddingTop</item>
        <item name="android:paddingBottom">@dimen/basic_screen_style_paddingBottom</item>
        <item name="android:paddingStart">@dimen/basic_screen_style_paddingLeft</item>
        <item name="android:paddingEnd">@dimen/basic_screen_style_paddingRight</item>
    </style>
    <style name="screen_style">
        <item name="android:paddingTop">@dimen/screen_style_paddingTop</item>
        <item name="android:paddingBottom">@dimen/screen_style_paddingBottom</item>
        <item name="android:paddingStart">@dimen/screen_style_paddingLeft</item>
        <item name="android:paddingEnd">@dimen/screen_style_paddingRight</item>
    </style>
    <style name="btn_row_style">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="btn_function_cell_style">
        <item name="android:textSize">@dimen/btn_function_text_size</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="btn_operation_cell_style">
        <item name="android:textSize">@dimen/btn_operation_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="btn_digit_cell_style">
        <item name="android:textSize">@dimen/btn_digit_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="btn_clear">
        <item name="android:textSize">@dimen/btn_clear_text_size</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <dimen name="btn_digit_text_size">40.0sp</dimen>
