<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/compass_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top|center_horizontal"
                android:background="@android:color/background_light">

    <RelativeLayout
        android:id="@+id/cover_main_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_width="@dimen/physical_width_of_quickcircle"
        tools:layout_height="@dimen/physical_height_of_quickcircle"
        android:background="@drawable/compass_back"
        android:layout_gravity="center_horizontal">

        <android.widget.ImageView
            android:id="@+id/needle"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/compass_needle"/>
    </RelativeLayout>
</RelativeLayout>